<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/contact_item_horizontal_margin"
    android:layout_marginVertical="@dimen/contact_item_vertical_margin"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/text_contact_group"
        style="@style/contact_group_text"
        android:layout_width="@dimen/contact_item_group_size"
        android:layout_height="@dimen/contact_item_group_size"
        app:layout_constraintBottom_toBottomOf="@id/text_contact_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_contact_icon"
        tools:background="@drawable/ic_star" />

    <TextView
        android:id="@+id/text_contact_icon"
        style="@style/contact_icon_text"
        android:layout_width="@dimen/contact_item_icon_size"
        android:layout_height="@dimen/contact_item_icon_size"
        android:layout_marginStart="@dimen/contact_item_spacing"
        android:background="@drawable/contact_icon"
        app:layout_constraintStart_toEndOf="@id/text_contact_group"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="J" />

    <TextView
        android:id="@+id/text_contact_name"
        style="@style/contact_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/contact_item_spacing"
        app:layout_constraintBottom_toTopOf="@id/text_contact_account_id"
        app:layout_constraintStart_toEndOf="@id/text_contact_icon"
        app:layout_constraintTop_toTopOf="@id/text_contact_icon"
        tools:text="John" />

    <TextView
        android:id="@+id/text_contact_account_id"
        style="@style/contact_account_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/text_contact_icon"
        app:layout_constraintStart_toStartOf="@id/text_contact_name"
        app:layout_constraintTop_toBottomOf="@id/text_contact_name"
        tools:text="RA2RBX6FTNGDLLQJ4NPQSFBFLQ" />

</androidx.constraintlayout.widget.ConstraintLayout>
