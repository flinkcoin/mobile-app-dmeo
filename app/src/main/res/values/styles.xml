<resources>
    <style name="contact_group_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="contact_icon_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="contact_name_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="contact_account_id_text">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Flink" />

    <style name="Flink.Navigation.Header.Layout" parent="Flink">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:padding">@dimen/nav_header_padding</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Flink.Navigation.Layout" parent="Flink">
        <item name="android:background">?android:windowBackground</item>
        <item name="itemIconTint">?attr/colorOnPrimary</item>
        <item name="itemTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Flink.Button" parent="Flink">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Flink.Button.Keyboard" parent="Flink.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">?android:windowBackground</item>
    </style>

    <style name="Flink.Button.Red" parent="Flink.Button">
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="Flink.Button.Green" parent="Flink.Button">
        <item name="android:backgroundTint">@color/green</item>
    </style>

    <style name="Flink.TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="hintTextColor">?attr/colorOnPrimary</item>
        <item name="boxStrokeColor">@color/text_input_layout_outlined_stroke_color</item>
    </style>

    <style name="Flink.TextView.OptionsMenu" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Flink.TextView.Headline" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Flink.TextView.Home.Headline" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="Flink.TextView.Home.Balance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Flink.TextView.Home.Requests" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/payment_requests_rectangle</item>
    </style>

    <style name="Flink.TextView.TransactionRow.Account" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="Flink.TextView.TransactionRow.Timestamp" parent="TextAppearance.MaterialComponents.Body2" />

    <style name="Flink.TextView.TransactionRow.Amount" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Flink.TextView.TransactionRow.ReferenceCode" parent="TextAppearance.MaterialComponents.Body2" />

    <style name="Flink.TextView.TransactionRow.Header.Date" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="Flink.TextView.Navigation.Header.Account" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Flink.TextView.Navigation.Header.AccountId" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Flink.TextView.SecretPhrase.Word" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>